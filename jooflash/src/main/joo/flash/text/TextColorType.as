package flash.text {


/**
 * The TextColorType class provides color values for the flash.text.TextRenderer class.
 * @see TextRenderer
 *
 */
public final class TextColorType {
  /**
   * Used in the <code>colorType</code> parameter in the <code>setAdvancedAntiAliasingTable()</code> method. Use the syntax <code>TextColorType.DARK_COLOR</code>.
   * @see TextRenderer#setAdvancedAntiAliasingTable()
   *
   */
  public static const DARK_COLOR:String = "dark";
  /**
   * Used in the <code>colorType</code> parameter in the <code>setAdvancedAntiAliasingTable()</code> method. Use the syntax <code>TextColorType.LIGHT_COLOR</code>.
   * @see TextRenderer#setAdvancedAntiAliasingTable()
   *
   */
  public static const LIGHT_COLOR:String = "light";
}
}
