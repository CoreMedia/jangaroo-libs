package flash.display {


/**
 * The GradientType class provides values for the <code>type</code> parameter in the <code>beginGradientFill()</code> and <code>lineGradientStyle()</code> methods of the flash.display.Graphics class.
 */
public final class GradientType {
  /**
   * Value used to specify a linear gradient fill.
   */
  public static const LINEAR:String = "linear";
  /**
   * Value used to specify a radial gradient fill.
   */
  public static const RADIAL:String = "radial";
}
}
