<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>net.jangaroo</groupId>
    <artifactId>jangaroo-libs</artifactId>
    <version>0.5.32-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>net.jangaroo</groupId>
  <artifactId>jooflexframework</artifactId>
  <version>0.5.32-SNAPSHOT</version>
  <packaging>jangaroo</packaging>

  <name>jooflexframework</name>
  <description>Joo Flex Framework</description>

  <build>

    <plugins>

      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-lifecycle</artifactId>
        <version>${jangaroo_version}</version>
        <extensions>true</extensions>
      </plugin>

      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-maven-plugin</artifactId>
        <configuration>
          <enableGuessingClasses>true</enableGuessingClasses>
          <enableGuessingMembers>true</enableGuessingMembers>
          <enableGuessingTypeCasts>true</enableGuessingTypeCasts>
        </configuration>
      </plugin>
    </plugins>

  </build>

  <dependencies>

    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jooflash</artifactId>
      <version>0.5.32-SNAPSHOT</version>
      <type>jangaroo</type>
    </dependency>

  </dependencies>

</project>
